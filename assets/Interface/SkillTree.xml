<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="SkillTree" controller="mygame.HUD">
        <layer id="layer" backgroundColor="#003f" childLayout="center">
            <image width="100%" height="100%" x="0px" y="0px" filename="Interface/Skill Tree Kampf.png"></image>
            <image filename="Interface/dlc.png" width="50%" height="50%" ></image>
            <panel width="100%" height="100%" backgroundColor="#0000" childLayout="absolute">
                <image filename="Interface/openSkilltree.png" width="10%" height="15%" x="5%" y="5%"></image>
                <control width="10%" height="15%" x="5%" y="5%" name="button" label="Open the skilltree" id="skill" visibleToMouse="true" childLayout="center">
                    <interact onClick="resume()"/>
                </control>
            </panel>
        </layer>
    </screen>
</nifty>
